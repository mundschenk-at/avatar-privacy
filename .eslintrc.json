{
  "extends": [ "plugin:@wordpress/eslint-plugin/recommended" ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "wp": true,
    "wpApiSettings": true,
    "window": true,
    "document": true,
    "jQuery": true,
    "avatarPrivacy": true,
    "Cookies": true
  },
  "settings": {
    "react": {
      "pragma": "wp"
    }
  },
  "ignorePatterns": [
    "**/*.js",
    "**/js/**.min.js",
    "node_modules/**/*.js",
    "build/**/*.js",
    "vendor/**/*.js",
    "Gruntfile.js",
    "!**/src/**/*.js"
  ]
}
